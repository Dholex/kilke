{
  "name": "kilke",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:Kaltsoon/kilke.git",
  "author": "Kalle Ilves <kalleilv@gmail.com>",
  "license": "MIT",
  "scripts": {
    "format": "yarn prettier --write \"./packages/{api/src,client/src,client/server,system-reader/src,system-io/src}/**/*.{js,jsx}\"",
    "lint": "yarn eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/{api/src,system-reader/src,pump-controller/src,core/src,system-io/src,client/src}/**/*.js": [
      "yarn lint",
      "git add"
    ],
    "*.{js,json,css,md}": [
      "yarn prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "pm2": "^3.2.2"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.15.1",
    "husky": "^1.1.4",
    "lint-staged": "^8.0.4",
    "prettier": "^1.15.2"
  }
}
